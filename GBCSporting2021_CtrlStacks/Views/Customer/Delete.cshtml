@model GBCSporting2021_CtrlStacks.Models.Customer
@{
    ViewData["Title"] = "Delete Customer";
    var fullname = Model.FirstName + " " + Model.LastName;
}
<h2>Delete Customer</h2>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="customer" asp-action="deleteconfirm" method="post">
            <input name="id" value="@Model.CustomerId" type="hidden" />
            <div class="mb-3 row">
                <div class="col-md-12">
                    <p>Do you really want to delete <b>@fullname</b>?</p>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-md-12 d-md-flex justify-content-md-end gap-2">
                    <button type="submit" class="btn btn-primary mr-2">Yes</button>
                    <a asp-controller="customer" asp-action="list" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>