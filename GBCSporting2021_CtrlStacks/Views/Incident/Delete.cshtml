@model GBCSporting2021_CtrlStacks.Models.Incident
@{
    ViewData["Title"] = "Delete Incident";
}
<h2>Delete Incident</h2>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="incident" asp-action="deleteconfirm" method="post">
            <input name="id" value="@Model.IncidentId" type="hidden" />
            <div class="mb-3 row">
                <div class="col-md-12">
                    <p>Do you really want to delete <b>@Model.Title</b>?</p>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-md-12 d-md-flex justify-content-md-end gap-2">
                    <button type="submit" class="btn btn-primary mr-2">Yes</button>
                    <a asp-controller="incident" asp-action="list" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>