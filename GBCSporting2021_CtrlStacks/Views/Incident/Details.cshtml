@model GBCSporting2021_CtrlStacks.Models.Incident
@{
    ViewData["Title"] = "Incident Details";
    var model = Model;
}
<h2>Incident Details</h2>
<div class="row">
    <div class="col-md-12">
        <div class="list-group">
            <div class="list-group-item">
                <p class="row">
                    <span class="col-md-2">Customer:</span>
                    <span class="col-md-10">@Model.Customer.FirstName @Model.Customer.LastName</span>
                </p>
            </div>
            <div class="list-group-item">
                <p class="row">
                    <span class="col-md-2">Product:</span>
                    <span class="col-md-10">@Model.Product.Name</span>
                </p>
            </div>
            <div class="list-group-item">
                <p class="row">
                    <span class="col-md-2">Title:</span>
                    <span class="col-md-10">@Model.Title</span>
                </p>
            </div>
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-2">Description:</div>
                    <div class="col-md-10">
                        <p></p>@Model.Description</p>
                    </div>
                </div>
            </div>
            <div class="list-group-item">
                <p class="row">
                    <span class="col-md-2">Technician:</span>
                    <span class="col-md-10">@Model.Technician.Name</span>
                </p>
            </div>
            <div class="list-group-item">
                <p class="row">
                    <span class="col-md-2">Date Opened:</span>
                    <span class="col-md-10">@string.Format("{0:MM/dd/yyyy}",model.DateOpened)</span>
                </p>
            </div>
        </div>
        <div class="mt-2 d-md-flex justify-content-md-end">
            <a asp-controller="incident" asp-action="list" class="btn btn-primary">Back</a>
        </div>
    </div>
</div>